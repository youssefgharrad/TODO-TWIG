{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des étudiants par ordre alphabétique des adresses e-mail</h1>
    <form action="{{ path('ListEtudiant') }}" method="GET">
        <div class="form-group">
            <label for="nsc">Recherche par NSC :</label>
            <input type="text" class="form-control" id="nsc" name="nsc">
        </div>
        <button type="submit" class="btn btn-primary">Rechercher</button>
    </form>
    <br>
    <table class="table" border=2>
        <thead>
            <tr>
                <th>NSC</th>
                <th>Email</th>
                <th>Classe</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
                <tr>
                    <td>{{ student.nsc }}</td>
                    <td>{{ student.email }}</td>
                    <td>{{ student.classroom.Name }}</td>
                    <td>
                        <a href="" class="btn btn-primary">Modifier</a>
                        <a href="" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet étudiant ?')">Supprimer</a>
                        <a href="" class="btn btn-primary">Afficher</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}